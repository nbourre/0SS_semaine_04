<Window x:Class="demo_classe_h20_s03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo_classe_h20_s03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400"
        MinWidth="375">
    <Grid Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label  Grid.Column="1" Grid.Row="1" Margin="6"
                HorizontalAlignment="Center">
            TEST
        </Label>
        <Button Grid.Column="1" Grid.Row="1" Margin="6" 
                Height="45" Width="100">
            Mon Bouton
        </Button>
        
        <Button Grid.Column="0" Grid.Row="1" Margin="6" 
                Height="45" Width="100"
                VerticalAlignment="Top">
            Btn Gauche
        </Button>
        <Button Grid.Column="2" Grid.Row="1" Margin="6" 
                Height="45" Width="100"
                VerticalAlignment="Bottom">
            Btn Droite
        </Button>
    </Grid>
</Window>
